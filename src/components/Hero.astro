---
import BlinkCursor from "@components/BlinkCursor.astro";
import MatrixText from "@components/MatrixText.astro";
import type { Cta } from "./Section.types";

export type HeroProps = {
  title: string;
  subtitle: string;
  cta?: Cta;
};
const { hero } = Astro.props as { hero: HeroProps };
const { title, subtitle, cta } = hero;
---

<section id="hero" class="container">
  <header class="">
    <h1 class="color"><MatrixText text={title} /></h1>
  </header>
  <main class="">
    <span>{subtitle}</span>
  </main>
  {
    cta && (
      <footer class="">
        {cta.link && (
          <a role="button" class="outline" href={cta.link} rel="noopener">
            {cta.text}
          </a>
        )}
        {!cta.link && (
          <h2 class=" primary">
            <span>
              {cta.text}
              <BlinkCursor />
            </span>
          </h2>
        )}
      </footer>
    )
  }
</section>
