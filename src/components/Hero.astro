---
import BlinkCursor from "@components/BlinkCursor.astro";
import MatrixText from "@components/MatrixText.astro";
import type { Cta } from "./Section.astro";


export type HeroProps = {
  title: string;
  subtitle: string;
  cta?: Cta;
};
const { hero } = Astro.props as { hero: HeroProps };
const { title, subtitle, cta } = hero;
--- 

<section
    id="hero"
    class="container">
    <header class="center">
      <h1 class="color"><MatrixText text={title} /></h1>
    </header>
    <main class="center">
      <p>{subtitle}<BlinkCursor /></p>
    </main>
    {cta && (
      <footer class="center">
        {cta.link && (
        <a role="button" class="outline"
          href={cta.link}
          target="_blank"
          rel="noopener">
        {cta.text}
        </a>
        )}
        {
          !cta.link && (
            <h2 class="comment">{cta.text}</h2>
          )
        }
      </footer>
    )}
  </section>